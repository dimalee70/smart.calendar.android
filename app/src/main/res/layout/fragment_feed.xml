<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.feed.domain.FeedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/period_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            android:tabStripEnabled="false"
            app:tabIndicatorHeight="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:tabRippleColor="#00000000"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabMode="fixed" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_periods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/period_tabs"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            />

        <!--TextView
            android:id="@+id/allEventTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Все мероприятия"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventRv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/allEventTv"
            app:layout_constraintBottom_toBottomOf="parent"
            /-->

    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>