<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="presenter" type="photograd.kz.smart.presentation.presenter.registration.RegistrationProcessPresenter"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/Theme.App.Dark"
            tools:context=".ui.fragment.registration.RegistrationFragment"
            android:id="@+id/linearLayout2">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:id="@+id/emailLayout"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginRight="9dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="9dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="1"
                    android:maxLength="14"
                    android:id="@+id/registration_username"
                    android:layout_weight="1"
                    android:hint="@string/user_name"
                    android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:id="@+id/loginLayout"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/emailLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginRight="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/registration_email"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:id="@+id/passwordLayout"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/loginLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_height="25dp"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/registration_password"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:textSize="12sp"/>
        </LinearLayout>

        <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Регистрация"
                android:background="@drawable/button_bg"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/passwordLayout"
                android:onClick="@{(v) -> presenter.register()}"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                app:layout_constraintEnd_toEndOf="@+id/passwordLayout"
                app:layout_constraintStart_toStartOf="@+id/passwordLayout"
                app:layout_constraintHorizontal_bias="0.495"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>