<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="user" type="kz.smart.calendar.models.requests.LoginRequestModel"/>
        <variable name="presenter" type="photograd.kz.smart.presentation.presenter.login.LoginProcessPresenter"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.view.login.LoginFragment"
        android:id="@+id/flMain">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingBottom="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="9dp"
                    android:id="@+id/emailLayout">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/email"
                        android:layout_weight="1"
                        android:hint="@string/username"
                        android:text="@={user.login}"
                        android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/emailLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="9dp"
                    android:id="@+id/passwordLayout">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:id="@+id/password"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:hint="@string/password"
                        android:text="@={user.password}"
                        android:textSize="12sp"/>
            </LinearLayout>
            <Button
                    android:text="@string/login"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnLogin"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@+id/passwordLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="48dp"
                    android:layout_marginStart="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:padding="5dp"
                    android:onClick="@{(v) -> presenter.loginClick()}"
            />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnLogin"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:weightSum="2"
                    android:id="@+id/ltSignIn">
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>